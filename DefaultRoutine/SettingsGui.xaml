<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="440" d:DesignWidth="627">
    <Grid x:Name="Root">
        <ScrollViewer VerticalScrollBarVisibility="Auto">
        	<StackPanel>
        		<Grid>
        			<Grid.RowDefinitions>
        				<RowDefinition Height="Auto" />
        			</Grid.RowDefinitions>

        			<Grid.ColumnDefinitions>
        				<ColumnDefinition Width="Auto" />
        				<ColumnDefinition Width="Auto" />
        			</Grid.ColumnDefinitions>

        			<!-- TODO -->

        		</Grid>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <Label Grid.Row="0" Grid.Column="0" Content="策略模式切换: "  Margin="3,5,3,1" ToolTipService.ToolTip="模式选择."/>
                    <ComboBox x:Name="defaultBehaviorComboBox1" Grid.Row="0" Grid.Column="1" Margin="3" IsEditable="False" />
					<Button Content="伏笔反馈！！！" Name="issueButton" Grid.Row="1" Grid.Column="0" Margin="3"/>	

					
                    <Label Grid.Row="4" Grid.Column="0" Content="表情切换: "  Margin="3,5,3,1" ToolTipService.ToolTip="模式选择."/>
                    <ComboBox x:Name="emoteComboBox" Grid.Row="4" Grid.Column="1" Margin="3" IsEditable="False" />

                    <Button Content="一键更新策略" Name="updateRoutineButton" Grid.Row="2" Grid.Column="0" Margin="3"/>							
					<Button Content="捐赠策略作者" Name="thanksButton" Grid.Row="2" Grid.Column="1" Margin="3"/>

	                <Button Content="打开最近对战记录文件夹" Name="lastMatch" Grid.Row="3" Grid.Column="0" Margin="3"/>	
					<Button Content="删除所有日志" Name="clearLogButton" Grid.Row="3" Grid.Column="1" Margin="3"/>	

					<Label Grid.Row="5" Grid.Column="0" Content="最大计算量: "  Margin="3,5,3,1" ToolTipService.ToolTip="最大计算量，数值越大,计算时长越大，越接近策略理想计算场面，默认为3000，最低不会低于 100."/>
					<TextBox Name="MaxWideTextBox" Grid.Row="5" Grid.Column="1" Margin="3,5,3,1"/>

					
					<Label Grid.Row="6" Grid.Column="0" Content="最大考虑步数: "  Margin="3,5,3,1" ToolTipService.ToolTip="AI计算考虑的最大步数，默认为12."/>
					<TextBox Name="MaxDeepTextBox" Grid.Row="6" Grid.Column="1" Margin="3,5,3,1"/>

					
					<Label Grid.Row="7" Grid.Column="0" Content="每步最大保留场面数: "  Margin="3,5,3,1" ToolTipService.ToolTip="每一步只保留最优的场面数量继续进行计算，默认为60，最低不会低于1"/>
